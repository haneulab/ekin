{
    "extends": [
        // next lint
        "next",
        // next lint
        "next/core-web-vitals",
        // eslint recommended
        "eslint:recommended"
    ],
    "globals": {
        // optout specifying React import in files
        "React": "readonly"
    },
    "rules": {
        // restriction on declared & not used variables, except experimental variables with '_var'
        "no-unused-vars": [
            1,
            { "args": "after-used", "argsIgnorePattern": "^_" }
        ]
    }
}
